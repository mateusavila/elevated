---
import { ArrowWorkWithUs } from '../components/images'
export interface Props {
  header: boolean
  small: boolean
  type: string
}
const { header, small, type } = Astro.props
---

<div class={`work-with-us-component ${header ? '' : 'small-header'} ${small ? 'small' : ''} page-${type}`}>
  <div class="container">
    <div class="work-with-us-component-text">
      <p>Interested in working with us? <br>Let's create something great.</p>
      <a href="/lets-talk" class="work-with-button">
        <img src={ArrowWorkWithUs} alt="" width="66" height="16" loading="lazy">
        <span class="work-with-button-text">Letâ€™s Talk</span>
      </a>
    </div>
  </div>
</div>

<style lang="sass">
  .work-with-us-component
    margin-top: 100px
    width: 100%
    position: relative
    &.small
      height: 200px
      .container
        height: 100%
    &.small-header
      margin-top: 50px
      .container
        border-top: none
    .container
      max-width: 1300px
      width: calc(100% - 40px)
      margin: 0 auto
      display: flex
      justify-content: center
      flex-wrap: wrap
      align-items: center
      height: 700px
      border-top: 0.5px solid rgba(255, 255, 255, 0.5)
    p
      font-family: var(--gelion)
      font-size: clamp(16px, calc(1rem + ((1vw - 3.2px) * 1.9886)), 30px)
      line-height: 120%
      margin: 0
      margin-bottom: 40px
      max-width: 397px
    .work-with-us-component-text
      margin: 0 auto
      max-width: 600px
    .work-with-button
      text-decoration: none
      height: 80px
      white-space: nowrap
      display: flex
      align-items: center
      grid-gap: 60px
      justify-content: flex-start
      line-height: 1
      font-size: clamp(32px, calc(2rem + ((1vw - 3.2px) * 6.8182)), 80px)
      font-family: var(--gelion)
      font-weight: bold
      transition: all .2s ease-in-out
      .work-with-button-text
        -webkit-text-stroke-color: #6E49FF
        -webkit-text-fill-color: rgba(0,0,0,0)
        transition: all .2s ease-in-out
        -webkit-background-clip: text
        -webkit-text-stroke-width: 4px
      &:hover
        .work-with-button-text
          background: linear-gradient(104.29deg, #7362FF 5.58%, #FF7B31 60.15%)
          transition: all .2s ease-in-out
          -webkit-background-clip: text
          -webkit-text-stroke-width: 0
          -webkit-text-fill-color: transparent
  @media all and (max-width: 1024px)
    .work-with-us-component
      .container
        height: auto
        padding: 100px 0 0
  @media all and (max-width: 600px)
    .work-with-us-component
      .work-with-button
        grid-gap: 20px
        .work-with-button-text
          -webkit-text-stroke-width: 1px
        img
          max-width: 40px
  @media all and (max-width: 450px)
    .work-with-us-component
      &.page-meet-the-team
        margin-top: 20px
        .container
          padding-top: 20px
      .container
        padding: 0
      .work-with-us-component-text
        width: 100%
        max-width: 100%
</style>
